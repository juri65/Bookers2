<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-bark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse"data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expande="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
      
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Home",root_path, class: 'nav-link text-white' do %>
        <i class="fas fa-home"></i>
        <% end %>
        
        <a class="nav=link text-light" href="/">
          <i class="fas fa-home"></i>
          <%= link_to "Home",root_path %>
        </a>
      </li>
      
      <li>
        <%= link_to "User", users_path, class: "text-white" %>
        <i class="fas fa-users"></i>
      </li>
      
      <li>
        <%= link_to "Books",books_path %>
         <i class="fas fa-book-open"></i>
      </li>
      <li>
        <%= link_to "Log out", destroy_user_session_path,method: :delete %>
        <i class="fas fa-sign-out-alt"></i>
      </li>
      <% else %>
       <li>
        <%= link_to "Home",root_path %>
        <i class="fas fa-home"></i>
      </li>
      <li>
        <%= link_to "About",about_path %>
        <i class="fas fa-link"></i>
      </li>
      <li>
        <%= link_to "Sign up",new_user_registration_path %>
        <i class="fas fa-user-plus"></i>
      </li>
      <li>
        <%= link_to "Log in",new_user_session_path %>
        <i class="fas fa-sign-in-alt"></i>
      </li>
      <% end %>
         </ul>
        </div>
       </div>
      </nav>
    </header>
    <% if flash[:notice] %>
    <div>
      <%= flash[:notice] %>
    </div>
    <% end %>
    <%= yield %>
  
    <footer>
        <div class="container mt-5">
            <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </footer>
  </body>
</html>
