<!-- ユーザー詳細 -->
<main>
  <div class="container px-5 px-sm0">
    <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %><br>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>name</tr>
           <tr><%= @user.name %></tr><br>
           <tr>introduction</tr>
           <tr><%= @user.introduction %></tr>
         </tbody>
       </table>

<!-- user編集 -->
<div class="row">
<%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary" do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div>

<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
            <tr>
                <td><%= image_tag @user.get_profile_image(100,100) %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td><%= link_to 'Edit',"/books/#{@book.id}/edit" %></td>
                <td><%= link_to "Destroy.", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                <% end %>
            </tr>
        </tbody>
    </table>
   </div>
  </div>
 </div>
</main>
