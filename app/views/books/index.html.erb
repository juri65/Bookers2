<h1>Books#index　一覧</h1>

<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Books</h1>

<%= @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  
  <p>Opinion</p>
  <span><%= book.body %></span>
  
<% end %>