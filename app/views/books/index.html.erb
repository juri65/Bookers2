<h3>(indexページ)</h3>

<h2>User info</h2>
<main>
  <div class="container px-5 px-sm0">
    <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
       
       <table class="table">
         <tbody>
           <tr><%= image_tag @user.get_profile_image(100,100) %></tr><br>
           <tr>name<%= @user.name %></tr><br>
           <tr>introduction<%= @user.introduction %></tr>
         </tbody>
       </table>

<!--ユーザー編集-->

<i class="fas fa-user-cog"></i>


<h1>New book</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %>error prohibited this obj from being saved:
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Edit',"/books/#{book.id}/edit" %></td>
            <td><%= link_to "Destroy.", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
       <% end %>
    </tbody>
</table>
