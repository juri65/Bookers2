<!-- ユーザー詳細 -->
<main>
  <div class="container px-5 px-sm0">
    <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %><br>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>name<%= @user.name %></tr><br>
           <tr>introduction<%= @user.introduction %></tr>
         </tbody>
       </table>

<!-- user編集 -->


<!--投稿フォーム-->
<h2 class="mt-3">New book</h2>
<%= form_with model: Book.new do |f| %>
<div class="form-group">
  <label for="book_title">Title</label>
</div>
<div class="form-group">
  <label for="book_body">Opinion</label>
</div>
<div class="form-group">
	<%= f.submit 'Create Book' %>
</div>
<% end %>

<!--投稿一覧-->
<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<% @books.each do |book| %>
<div>
    <%= link_to books_path(book.id) do %>
    <% end %>
  <p>Title<%= book.title %></p>
  <p>Opinion<%= book.body %></p>
  
</div>
<% end %>
</div>
</div>
</div>
</main>