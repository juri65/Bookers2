<!-- ユーザー詳細 -->

<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<p>name<%= @user.name %></p>
<p>introduction<%= @user.introduction %></p>

<!-- user編集 -->


<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

<!--投稿一覧-->
<h1>Books</h1>

<%= @books.each do |book| %>
<div>
    <%= link_to books_path(book.id) do %>
    <%= image_tag book.get_image %>
    <% end %>
    
</div>
<% end %>

  <p>Title</p>
  <span><%= book.title %></span>
  
  <p>Opinion</p>
  <span><%= book.body %></span>
  
