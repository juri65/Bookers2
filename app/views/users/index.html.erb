<!-- ユーザー詳細 -->
<main>
  <div class="container px-5 px-sm0">
    <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %><br>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>name</tr>
           <tr><%= @user.name %></tr><br>
           <tr>introduction</tr>
           <tr><%= @user.introduction %></tr>
         </tbody>
       </table>

<!-- user編集 -->
<div class="row">
<%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary" do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div>

<!--投稿フォーム-->
<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<!--User 一覧 -->
<div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= link_to user_path(user) do %><%= image_tag user.get_profile_image(100,100) %><% end %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show',user_path(user) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
